
@{
    ViewBag.Title = "FilmTypeEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using ProjectTemplate.Core.Entities;
@model FilmType


<div class="panel panel-success">
    <div class="panel-heading">Film Tür Düzenle</div>
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th>AD</th>
                    <th>GÜNCELLE</th>
                </tr>
            </thead>
            <tr>
                @using (Html.BeginForm("FilmTypeEdit", "FilmType", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.Id)
                    <td>@Html.TextBoxFor(s => s.TypeName, new { @class = "form-control", @value = Model.TypeName, name = "typename" })</td>
                    <td><input type="submit" name="name" value="Güncelle" class="btn" /></td>
                }
            </tr>

        </table>
    </div>
</div>

