<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mor Takım Projesi BAMovie</title>
    <link href="../../Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="col-lg-10 col-lg-push-1">
        <nav role="navigation" class="navbar navbar-default">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Index", "Base", new { Controller = "Film" }, new { @class = "navbar-brand", target = "_blank" })
            </div>
            <!-- Collection of nav links and other content for toggling -->
            <div id="navbarCollapse" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    
                    <li class="active">@Html.ActionLink("Filmler", "FilmListele", "Film")</li>
                    <li>@Html.ActionLink("FilmTypes", "FilmTypeListele", "FilmType")</li>
                    <li>@Html.ActionLink("Actors", "Actor", "Actor")</li>
                    <li>@Html.ActionLink("Directors", "Director", "Director")</li>
                    <li>@Html.ActionLink("Producers", "Producer", "Producer")</li>
                    <li>@Html.ActionLink("Writers", "Writer", "Writer")</li>
                    <li>@Html.ActionLink("Üyeler", "Admin", "User")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Logout", "Logout", "User")</li>
                    
                    
                </ul>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()

        </div>
    </div>

    

    <script src="../../Scripts/jquery-1.10.2.min.js"></script>
    <script src="../../Scripts/bootstrap.min.js"></script>
</body>
</html>